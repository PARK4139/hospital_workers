{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Linux Virtual Environment",
            "type": "shell",
            "command": "uv",
            "args": ["venv", ".venv_linux"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "uv를 사용하여 Linux용 가상환경을 생성합니다."
        },
        {
            "label": "Create Windows Virtual Environment",
            "type": "shell",
            "command": "uv",
            "args": ["venv", ".venv_windows"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "uv를 사용하여 Windows용 가상환경을 생성합니다."
        },
        {
            "label": "Create Both Virtual Environments",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Create Linux Virtual Environment",
                "Create Windows Virtual Environment"
            ],
            "group": "build",
            "detail": "Linux와 Windows용 가상환경을 모두 생성합니다."
        },
        {
            "label": "Install Dependencies (Linux)",
            "type": "shell",
            "command": "uv",
            "args": ["sync", "--python", ".venv_linux/bin/python"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Linux 가상환경에 의존성을 설치합니다."
        },
        {
            "label": "Install Dependencies (Windows)",
            "type": "shell",
            "command": "uv",
            "args": ["sync", "--python", ".venv_windows/Scripts/python.exe"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Windows 가상환경에 의존성을 설치합니다."
        }
    ]
}
